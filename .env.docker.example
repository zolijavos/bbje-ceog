# CEO Gala - Docker Environment Variables
# Copy this file to .env and fill in the values

# Database
DB_ROOT_PASSWORD=your_secure_root_password
DB_PASSWORD=your_secure_db_password

# App Secrets (generate with: openssl rand -hex 32)
APP_SECRET=your_64_char_secret_for_magic_links
QR_SECRET=your_64_char_secret_for_jwt_tokens

# NextAuth
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your_32_char_nextauth_secret

# Public URLs
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_key
STRIPE_SECRET_KEY=sk_live_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@your-domain.com
SMTP_PASS=your_smtp_password
SMTP_FROM="CEO Gala" <noreply@your-domain.com>
