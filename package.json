{
  "name": "ceog-gala-registration",
  "version": "0.1.0",
  "private": true,
  "description": "CEO Gala registration system with payment processing, QR ticketing, and check-in management",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "postbuild": "cp -r .next/static .next/standalone/.next/ && cp -r public .next/standalone/",
    "deploy": "npm run build && pm2 restart ceog",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.4.0",
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@phosphor-icons/react": "^2.1.10",
    "@prisma/client": "^5.19.0",
    "@types/papaparse": "^5.5.0",
    "bcryptjs": "^2.4.3",
    "canvas": "^3.2.0",
    "clsx": "^2.1.0",
    "framer-motion": "^12.23.25",
    "html5-qrcode": "^2.3.8",
    "ics": "^3.8.1",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^4.0.0",
    "konva": "^9.3.22",
    "next": "^14.2.0",
    "next-auth": "^4.24.11",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.7",
    "papaparse": "^5.5.3",
    "qrcode": "^1.5.4",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-konva": "^18.2.14",
    "stripe": "^16.12.0",
    "tailwind-merge": "^2.5.0",
    "zod": "^3.23.0",
    "prisma": "^5.19.0",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.5.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.14.0",
    "@types/nodemailer": "^6.4.15",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.44.0",
    "@seontechnologies/playwright-utils": "^3.10.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "@vitest/ui": "^1.6.1",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "happy-dom": "^20.0.11",
    "playwright-bdd": "^8.4.1",
    "ts-node": "^10.9.2",
    "vitest": "^1.6.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  }
}
